{
  "name": "desta-back-end",
  "version": "1.0.0",
  "main": "index.js",
  "description": "a project management app with seamless integration with slack workspaces ",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && ./copy.sh && node dist/src/index.js",
    "dev": "ts-node-dev -r dotenv/config --respawn --transpileOnly src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "apollo-server-express": "^2.14.2",
    "express": "^4.17.1",
    "graphql": "^14.4.2",
    "graphql-import": "^0.7.1",
    "prisma-client-lib": "^1.34.3",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/node": "^12.7.0",
    "dotenv": "^8.0.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "ts-node-dev": "^1.0.0-pre.40"
  }
}
